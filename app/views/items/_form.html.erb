<%= form_for [@user, @user.items.build] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter your to-do list item here' %>
  </div>
  <div class="form-group">
    <%= f.submit "Create To-Do Item", class: 'btn btn-success' %>
  </div>
<% end %>