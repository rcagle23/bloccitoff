!!!
%html
  %head
    %title Bloccitoff
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    
    - if flash[:notice]
      .alert.alert-success
        %button.close{"data-dismiss" => "alert", :type => "button"} &times;
        = flash[:notice]
    - elsif flash[:error]
      .alert.alert-danger
        %button.close{"data-dismiss" => "alert", :type => "button"} &times;
        = flash[:error]
    - elsif flash[:alert]
      .alert.alert-warning
        %button.close{"data-dismiss" => "alert", :type => "button"} &times;
        = flash[:alert]

    .container
      #user_nav.nav.nav-tabs.pull-right{:style => "padding-bottom: 5px; padding-top:3px;"}
        - if current_user
          Logged in as #{current_user.username}, #{current_user.email}.
          = link_to "Logout", log_out_path, class: 'btn btn-primary btn-sm'
          or
          \#{link_to "Reset Password", new_password_reset_path, class: 'btn btn-primary btn-sm'}
        - else
          = link_to "Sign-up", sign_up_path, class: 'btn btn-primary btn-sm'
          or
          \#{link_to "Login", log_in_path, class: 'btn btn-primary btn-sm'}
     
      %body
        = yield

